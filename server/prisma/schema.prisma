generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  username  String     @unique
  password  String
  disabled  Boolean
  auditLogs AuditLog[]
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  type      String
  action    String?
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now()) @db.Timestamptz(3)
}
